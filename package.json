{
  "name": "pixx",
  "version": "0.0.36",
  "description": "Create web friendly images and code snippets",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "/dist"
  ],
  "scripts": {
    "watch": "tsx watch ./src/index.ts",
    "dev": "tsx ./src/index.ts",
    "build": "pkgroll --clean-dist --sourcemap",
    "prepac": "npm run build",
    "pac": "npm version patch && git push --tags origin main && npm publish",
    "dry": "npm publish --dry-run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webmastersmith/pixx.git"
  },
  "keywords": [
    "image",
    "img",
    "responsive",
    "picture",
    "resolution",
    "resolution switching",
    "art direction"
  ],
  "author": "Bryon Smith",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/webmastersmith/pixx/issues"
  },
  "homepage": "https://github.com/webmastersmith/pixx#readme",
  "dependencies": {
    "chalk": "^4.1.2",
    "clsx": "^2.1.1",
    "exifr": "^7.1.3",
    "glob": "^11.0.0",
    "html-react-parser": "^5.2.0",
    "image-dimensions": "^2.3.0",
    "image-size": "^1.1.1",
    "sharp": "^0.33.5",
    "tailwind-merge": "^2.5.5",
    "zod": "^3.24.1",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "pkgroll": "^2.5.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
