{
  "name": "pixx",
  "version": "0.1.2",
  "description": "Create responsive, web friendly images and code snippets.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "/dist"
  ],
  "scripts": {
    "watch": "tsx watch ./src/index.ts",
    "dev": "tsx ./src/index.ts",
    "build": "pkgroll --clean-dist --sourcemap",
    "prepac": "npm run build",
    "pac": "npm version patch && git push --tags origin main && npm publish",
    "dry": "npm publish --dry-run",
    "pretest": "npm run build",
    "test": "node ./index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webmastersmith/pixx.git"
  },
  "keywords": [
    "image",
    "img",
    "responsive",
    "picture",
    "resolution",
    "resolution switching",
    "art direction"
  ],
  "author": "Bryon Smith",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/webmastersmith/pixx/issues"
  },
  "homepage": "https://github.com/webmastersmith/pixx#readme",
  "dependencies": {
    "chalk": "^4.1.2",
    "cncn": "^1.0.4",
    "exifr": "^7.1.3",
    "glob": "^11.0.3",
    "image-size": "^2.0.2",
    "sharp": "^0.34.3",
    "zod": "^4.0.16"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@types/react": "^19.1.9",
    "pkgroll": "^2.15.3",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  }
}
